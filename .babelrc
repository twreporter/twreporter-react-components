{
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "shared": "./shared",
          "header-components": "./header-components/src",
          "footer-components": "./footer-components/src",
          "cinemagraph" : "./cinemagraph/src"
        }
      }
    ],
    [
      "wrap-in-js",
      {
        "extensions": ["css$", "scss$"]
      }
    ],
    [
      "inline-react-svg", {
        "svgo": {
          "plugins": [
            {
              "cleanupIDs": false
            }
          ]
        }
      }
    ],
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true,
        "preprocess": false
      }
    ]
  ],
  "presets": ["env", "stage-0", "react"],
  "ignore": [
    "src/**/*.json"
  ]
}
